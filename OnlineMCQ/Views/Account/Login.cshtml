@model OnlineMCQ.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="text-center text-lg-start">
    <div class="container py-5">
        <div class="row gx-lg-5 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">

                <img src="~/AcademicImage/draw2.jpg"
                     class="img-fluid" alt="Sample image">
             
            </div>

            <div class="col-lg-5">
                <div class="card shadow p-4">
                    <!-- Error Alert -->
                    @if (!ViewData.ModelState.IsValid || ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Html.ValidationSummary() <br />
                            @ViewData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="card-body">

                        <h4 class="text-center mb-4">
                            <img src="/AcademicImage/Logo/2.png" width="40px" alt="Logo" />
                            <strong class="btn-outline-dark text-uppercase">Basic Academic</strong>
                        </h4>

                        <form asp-action="Login" method="post">
                            <div class="mb-3">
                                <div class="input-group">
                                    <span class="input-group-text">@@</span>
                                    <input asp-for="Email" class="form-control" placeholder="Email" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="mb-3">
                                <div class="input-group">
                                    <span class="input-group-text" id="togglePassword" style="cursor:pointer;">
                                        <i class="bi bi-eye"></i>
                                    </span>
                                    <input asp-for="Password" type="password" id="password" class="form-control" placeholder="Password" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    Login
                                </button>
                            </div>
                        </form>

                        <!-- OR Divider -->
                        <div class="text-center my-3">
                            <p>or sign up with:</p>
                        </div>

                        <!-- Social Buttons -->
                        <div class="d-flex justify-content-center">
                            <button type="button" class="btn btn-outline-primary btn-floating mx-1">
                                <i class="bi bi-facebook"></i>
                            </button>
                            <button type="button" class="btn btn-outline-warning btn-floating mx-1">
                                <i class="bi bi-google"></i>
                            </button>
                            <button type="button" class="btn btn-outline-info btn-floating mx-1">
                                <i class="bi bi-twitter"></i>
                            </button>
                            <button type="button" class="btn btn-outline-dark btn-floating mx-1">
                                <i class="bi bi-linkedin"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        const togglePassword = document.getElementById('togglePassword');
        const password = document.getElementById('password');

        togglePassword.addEventListener('click', function () {
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);

            // Toggle Eye Icon
            const icon = this.querySelector('i');
            icon.classList.toggle('bi-eye');
            icon.classList.toggle('bi-eye-slash');
        });
    </script>
}
