<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/mdb-ui-kit/mdb.min.css" rel="stylesheet" />
    <link href="~/css/adminstylesheet.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", false)

</head>
<body>

    <!-- Sidebar -->
    <div class="d-flex" id="wrapper">
        <div id="sidebar" class="bg-dark text-white p-3 sidebar-expanded">
            <ul class="nav flex-column">
                <li class="nav-item d-flex align-items-center mb-2">
                    <i class="bi bi-speedometer2 me-2"></i>
                    <a class="sidebar-text text-white" asp-area="" asp-controller="Admin" asp-action="AdminDashboard">Dashboard</a>
                </li>
                <li class="nav-item d-flex align-items-center mb-2">
                    <i class="bi bi-people me-2"></i>
                    <span class="sidebar-text">Students</span>
                    
                </li>
                <li class="nav-item d-flex align-items-center mb-2">
                    <i class="bi bi-question-diamond me-2"></i>
                    <a class="sidebar-text text-white" asp-area="" asp-controller="MCQ" asp-action="QuestionList">Question List</a>
                </li>
                <li class="nav-item d-flex align-items-center mb-2">
                    <i class="bi bi-card-checklist me-2"></i>
                    <a class="sidebar-text text-white" asp-area="" asp-controller="MCQ" asp-action="AdminResults">Results</a>
                </li>
                <li class="nav-item d-flex align-items-center mb-2">
                    <i class="bi bi-card-checklist me-2"></i>
                    <a class="sidebar-text text-white" asp-area="" asp-controller="Admin" asp-action="NoticeList">Notices</a>
                </li>
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item d-flex align-items-center mb-2">
                    <i class="bi bi-box-arrow-right me-2"></i>
                    <a class="sidebar-text text-white" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>

                </li>
            }
            </ul>
        </div>

        <!-- Content Area beside sidebar -->
        <div id="content-area" class="d-flex flex-column min-vh-100">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-light" id="toggleSidebar">☰</button>
                    <span class="navbar-brand">Basic Academic</span>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-info">Public View</a>
                </div>
            </nav>

            <!-- Main Body -->
            <main class="flex-grow-1 container-fluid mt-3">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="footer py-3 bg-light text-center">
                <div class="container">
                    <span class="text-muted">© @DateTime.Now.Year - Basic Academic Coaching System</span>
                </div>
            </footer>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/mdb-ui-kit/mdb.umd.min.js"></script>
    <script src="~/mdb-ui-kit/mdb.es.min.js"></script>
    <script src="~/js/adminjavascript.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    
</body>
</html>
