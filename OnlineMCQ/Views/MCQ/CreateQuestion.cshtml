@model OnlineMCQ.Models.Question

@{
    ViewData["Title"] = "CreateQuestion";
}

<h2>নতুন প্রশ্ন তৈরি করুন</h2>

<form asp-action="CreateQuestion" method="post">
    <div class="form-group">
        <label>প্রশ্ন</label>
        <input type="text" asp-for="QuestionText" class="form-control" required />
    </div>
    <div class="form-group">
        <label>অপশন 1</label>
        <input type="text" asp-for="OptionA" class="form-control" required />
    </div>
    <div class="form-group">
        <label>অপশন 2</label>
        <input type="text" asp-for="OptionB" class="form-control" required />
    </div>
    <div class="form-group">
        <label>অপশন 3</label>
        <input type="text" asp-for="OptionC" class="form-control" required />
    </div>
    <div class="form-group">
        <label>অপশন 4</label>
        <input type="text" asp-for="OptionD" class="form-control" required />
    </div>
    <div class="form-group">
        <label>সঠিক উত্তর (1-4)</label>
        <input type="number" asp-for="CorrectAnswer" class="form-control" required min="1" max="4" />
    </div>
    <button type="submit" class="btn btn-primary">সংরক্ষণ করুন</button>
</form>
